@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">

    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square pe-2"></i>Add New Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>Display Order</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.DisplayOrder
                </td>
                <td>
                    <div>

                        <button type="submit" class="btn btn-warning ms-1">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="link-dark text-decoration-none"><i class="bi bi-pencil-fill d-inline-block me-1"></i>Edit</a>
                        </button>
                        <button type="submit" class="btn btn-danger ms-1">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="link-dark text-decoration-none"><i class="bi bi-trash-fill d-inline-block me-1"></i>Remove</a>
                        </button>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>

</div>
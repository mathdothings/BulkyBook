@model Category
@{
    ViewData["Title"] = "Create";
}

<div class="container p-3">

    <div class="row pt-4 pb-2">
        <div class="col-12">
            <h2 class="text-primary">Delete Category</h2>
            <hr>
        </div>
        <form method="post" asp-action="DeletePost">
            <input asp-for="Id" hidden="hidden">
            <div class="mt-4 container row">
                <div class="mb-3">
                    <h2>Are you sure you want do delete <span class="text-warning">@Model.Name</span>?</h2>
                    <p class="text-danger"><i class="bi bi-exclamation-square-fill"></i> This action can't be turned back and all data will be lost!</p>
                </div>
            </div>
            <button type="submit" class="btn btn-danger ms-4"><i class="bi bi-check-square me-2"></i>Delete</button>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}